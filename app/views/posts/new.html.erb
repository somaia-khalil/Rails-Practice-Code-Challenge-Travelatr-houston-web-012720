<h1>Create a new Post</h1>
<%if flash[:errors]%>
<%flash[:errors].each do |error|%>
<%=error%>
<%end%>
<%end%>



<%=form_for @post do |f|%>
<%=f.label :title%>
<%=f.text_field :title%>

<%=f.label :content%>
<%=f.text_field :content%>

<%=f.label :likes%>
<%=f.text_field :likes%>

<%=f.collection_select :blogger_id , @bloggers , :id , :name%>
<%=f.collection_select :destination_id, @destinations, :id , :name%>

<%=f.submit%>
<%end%>

